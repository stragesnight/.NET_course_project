<Window x:Class="NET_course_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_course_project"
        mc:Ignorable="d"
        Title="To-Do List" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="32px"/>
            </Grid.RowDefinitions>
            <ListBox Grid.Row="0" Grid.Column="0"
                     ItemsSource="{Binding Path=DbContext.Projects.Local}"
                     SelectedItem="{Binding Path=SelectedProject}"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.CanContentScroll="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="4px" BorderBrush="Black" BorderThickness="2px">
                            <StackPanel Margin="4px">
                                <TextBlock Text="{Binding Path=Title}" FontSize="12px"/>
                                <StackPanel>
                                    <ListBox ItemsSource="{Binding Path=ToDos}"
                                             SelectedItem="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.SelectedToDo}"
                                             ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="4px">
                                                    <TextBlock Text="{Binding Path=Title}"/>
                                                    <TextBlock Text="{Binding Path=Priority.Title}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button HorizontalAlignment="Center" Width="128px" Height="24px"
                                            Content="Add new to-do..."
                                            Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.AddToDoCommand}"
                                            CommandParameter="{Binding Path=Id}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="1" Grid.Column="0" Height="32px"
                    Content="Add new project..."
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.AddProjectCommand}"/>
        </Grid>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="{Binding Path=SelectedToDo.Title}"/>
            <TextBlock Text="{Binding Path=SelectedToDo.Description}"/>
            <TextBlock Text="{Binding Path=SelectedToDo.DueTo}"/>
            <TextBlock Text="{Binding Path=SelectedToDo.Priority.Title}"/>
        </StackPanel>
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="32px"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="To-Do's by due date:"
                       TextAlignment="Center" VerticalAlignment="Center"/>
            <ListBox Grid.Row="1" Grid.Column="0"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.CanContentScroll="False">
                <ListBoxItem>
                    <Border BorderThickness="2px" BorderBrush="Black" Margin="4px">
                        <StackPanel Margin="4px">
                            <TextBlock Text="Due today:" FontSize="12px"/>
                            <ListBox ItemsSource="{Binding Path=Ongoing1DayToDos}" SelectedItem="{Binding Path=SelectedToDo}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Path=Title}"/>
                                            <TextBlock Text="{Binding Path=Priority.Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </ListBoxItem>
                <ListBoxItem>
                    <Border BorderThickness="2px" BorderBrush="Black" Margin="4px">
                        <StackPanel Margin="4px">
                            <TextBlock Text="Due in 3 days:" FontSize="12px"/>
                            <ListBox ItemsSource="{Binding Path=Ongoing3DayToDos}" SelectedItem="{Binding Path=SelectedToDo}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Path=Title}"/>
                                            <TextBlock Text="{Binding Path=Priority.Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </ListBoxItem>
                <ListBoxItem>
                    <Border BorderThickness="2px" BorderBrush="Black" Margin="4px">
                        <StackPanel Margin="4px">
                            <TextBlock Text="Due in a week:" FontSize="12px"/>
                            <ListBox ItemsSource="{Binding Path=Ongoing7DayToDos}" SelectedItem="{Binding Path=SelectedToDo}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Path=Title}"/>
                                            <TextBlock Text="{Binding Path=Priority.Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </ListBoxItem>
            </ListBox>
        </Grid>
    </Grid>
</Window>
