<Window x:Class="NET_course_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_course_project"
        mc:Ignorable="d"
        Title="To-Do List" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="32px"/>
            </Grid.RowDefinitions>
            <ListBox Grid.Row="0" Grid.Column="0"
                     ItemsSource="{Binding Path=DbContext.Projects.Local}"
                     SelectedItem="{Binding Path=SelectedProject}"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="16px">
                            <TextBlock Text="{Binding Path=Title}" FontSize="12px"/>
                            <StackPanel>
                                <ListBox ItemsSource="{Binding Path=ToDos_Projects}"
                                         SelectedItem="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.SelectedToDo_Project}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="4px">
                                                <TextBlock Text="{Binding Path=ToDo.Title}"/>
                                                <TextBlock Text="{Binding Path=ToDo.Priority.Title}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button HorizontalAlignment="Center" Width="128px" Height="24px"
                                        Content="Add new to-do..."
                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.AddToDoCommand}"
                                        CommandParameter="{Binding Path=Id}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="1" Grid.Column="0" Height="32px"
                    Content="Add new project..."
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.AddProjectCommand}"/>
        </Grid>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="{Binding Path=SelectedToDo_Project.ToDo.Title}"/>
            <TextBlock Text="{Binding Path=SelectedToDo_Project.ToDo.Description}"/>
            <TextBlock Text="{Binding Path=SelectedToDo_Project.ToDo.DueTo}"/>
            <TextBlock Text="{Binding Path=SelectedToDo_Project.ToDo.Priority.Title}"/>
        </StackPanel>
    </Grid>
</Window>
